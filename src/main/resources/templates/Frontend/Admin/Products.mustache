<script> //Selecting a row.
$(document).ready(function () {
    $("#dataTable tbody tr").click(function () {
        var tableData = $(this).children("td").map(function() {
            return $(this).text();
        }).get();

        $("#productId").val(tableData[0]);
        $("#userId").val(tableData[1]);
        $("#title").val(tableData[2]);
        $("#summary").val(tableData[3]);
        $("#type").val(tableData[4]);
        $("#price").val(tableData[5]);
        $("#discount").val(tableData[6]);
        $("#date").val(tableData[7]);
        $("#content").val(tableData[8]);
        $("#productUrl").val(tableData[9]);
        $('#editModal').modal('show');
    });

});

</script>
