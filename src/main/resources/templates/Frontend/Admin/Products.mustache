</div>

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <form>
                    <div class="form-group row">
                        <label for="text1" class="col-4 col-form-label">Product id</label>
                        <div class="col-8">
                            <input id="productId" name="text1" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text2" class="col-4 col-form-label">User id</label>
                        <div class="col-8">
                            <input id="userId" name="text2" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text" class="col-4 col-form-label">Title</label>
                        <div class="col-8">
                            <input id="title" name="text" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">Summary</label>
                        <div class="col-8">
                            <input id="summary" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">Type</label>
                        <div class="col-8">
                            <input id="type" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">Price</label>
                        <div class="col-8">
                            <input id="price" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">Discount</label>
                        <div class="col-8">
                            <input id="discount" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">Published at</label>
                        <div class="col-8">
                            <input id="date" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">Content</label>
                        <div class="col-8">
                            <input id="content" name="text3" type="text" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="text3" class="col-4 col-form-label">ProductURL</label>
                        <div class="col-8">
                            <input id="productUrl" name="text3" type="text" class="form-control">
                        </div>
                    </div>

                </form>                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



