<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
            <div class="sb-sidenav-menu">
                <div class="profile-userpic">
                    <img src="https://scontent.fbma2-1.fna.fbcdn.net/v/t1.0-9/17796707_10155264022745159_8129848447376750595_n.jpg?_nc_cat=111&ccb=2&_nc_sid=174925&_nc_ohc=njmSzJq0HE8AX_RWY6P&_nc_ht=scontent.fbma2-1.fna&oh=ae2a9a187954f17fe489be1522d04e9e&oe=60448624"
                         class="img-responsive" style="display:block; margin: 0 auto; padding-top: 20px; ">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        {{userData.firstName}}
                        <div class="profile-usertitle-name">
                            {{userData.lastName}}
                            <div class="profile-usertitle-name">
                                {{userData.email}}
                                <div class="profile-usertitle-job">
                                    {{userData.mobileNr}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="profile-userbuttons">
                    </div>
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Admin</div>
                        <a class="nav-link" href="http://localhost:8888/Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <a class="nav-link" href="http://localhost:8888/Admin/Products">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Products
                        </a>
                        <a class="nav-link" href="http://localhost:8888/Admin/Users">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Users
                        </a>
                        <a class="nav-link" href="http://localhost:8888/Admin/Orders">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Orders
                        </a>
                        <a class="nav-link" href="http://localhost:8888/Admin/Reviews">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Reviews
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    {{userData.email}}
                </div>
            </div>
        </nav>
    </div>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <h1 class="mt-4">Products</h1>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table mr-1"></i>
                        Products
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>ProductID</th>
                                    <th>UserID</th>
                                    <th>Title</th>
                                    <th class="hide">summary</th>
                                    <th class="hide">type</th>
                                    <th>Price</th>
                                    <th class="hide">discount</th>
                                    <th>Date</th>
                                    <th class="hide">content</th>
                                    <th class="hide">ProductUrl</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Image</th>
                                    <th>ProductID</th>
                                    <th>UserID</th>
                                    <th>Title</th>
                                    <th class="hide">summary</th>
                                    <th class="hide">type</th>
                                    <th>Price</th>
                                    <th class="hide">discount</th>
                                    <th>Date</th>
                                    <th class="hide">content</th>
                                    <th class="hide">ProductUrl</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                {{#allProducts}}
                                <tr>
                                    <td><img src="{{productUrl}}" style="object-fit:cover;" alt="Girl in a jacket" width="100" height="100"></td>
                                    <td>{{productId}}</td>
                                    <td>{{userId}}</td>
                                    <td>{{title}}</td>
                                    <td class="hide">{{summary}}</td>
                                    <td class="hide">{{type}}</td>
                                    <td>{{price}}</td>
                                    <td class="hide">{{discount}}</td>
                                    <td>{{publishedAt}}</td>
                                    <td class="hide">{{content}}</td>
                                    <td class="hide">{{productUrl}}</td>
                                </tr>
                                {{/allProducts}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Your Website 2020</div>
                    <div>
                        <a href="#">Privacy Policy</a>
                        &middot;
                        <a href="#">Terms &amp; Conditions</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <form method="POST" action="/Admin/updateProduct" novalidate>
                    <div class="form-group row">
                        <label for="productId" class="col-4 col-form-label">Product id</label>
                        <div class="col-8">
                            <input id="productId" name="productId" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userId" class="col-4 col-form-label">User id</label>
                        <div class="col-8">
                            <input id="userId" name="userId" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="title" class="col-4 col-form-label">Title</label>
                        <div class="col-8">
                            <input id="title" name="title" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="summary" class="col-4 col-form-label">Summary</label>
                        <div class="col-8">
                            <input id="summary" name="summary" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="type" class="col-4 col-form-label">Type</label>
                        <div class="col-8">
                            <input id="type" name="type" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="price" class="col-4 col-form-label">Price</label>
                        <div class="col-8">
                            <input id="price" name="price" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="discount" class="col-4 col-form-label">Discount</label>
                        <div class="col-8">
                            <input id="discount" name="discount" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-4 col-form-label">Published at</label>
                        <div class="col-8">
                            <input id="date" name="publishedAt" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="content" class="col-4 col-form-label">Content</label>
                        <div class="col-8">
                            <input id="content" name="content" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="productUrl" class="col-4 col-form-label">Product Url</label>
                        <div class="col-8">
                            <input id="productUrl" name="productUrl" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <a id="deletebtn" class="btn btn-danger">Delete Event</a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


