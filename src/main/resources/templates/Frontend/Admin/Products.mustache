    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <h1 class="mt-4">Products</h1>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table mr-1"></i>
                        Products
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>ProductID</th>
                                    <th>UserID</th>
                                    <th>Title</th>
                                    <th class="hide">summary</td>
                                    <th class="hide">type</td>
                                    <th>Price</th>
                                    <th class="hide">discount</td>
                                    <th>Date</th>
                                    <th class="hide">content</td>
                                    <th>ProductURL</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>ProductID</th>
                                    <th>UserID</th>
                                    <th>Title</th>
                                    <th class="hide">summary</td>
                                    <th class="hide">type</td>
                                    <th>Price</th>
                                    <th class="hide">discount</td>
                                    <th>Date</th>
                                    <th class="hide">content</td>
                                    <th>ProductURL</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                {{#allProducts}}
                                <tr>
                                    <td>{{productId}}</td>
                                    <td>{{userId}}</td>
                                    <td>{{title}}</td>
                                    <td class="hide">{{summary}}</td>
                                    <td class="hide">{{type}}</td>
                                    <td>{{price}}</td>
                                    <td class="hide">{{discount}}</td>
                                    <td>{{publishedAt}}</td>
                                    <td class="hide">{{content}}</td>
                                    <td>{{productUrl}}</td>
                                </tr>
                                {{/allProducts}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
