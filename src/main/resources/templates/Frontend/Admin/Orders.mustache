<div class="modal" tabindex="-1" role="dialog" id="orderModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <form>
                    <div class="form-group row">
                        <label for="orderId" class="col-4 col-form-label">Order Id</label>
                        <div class="col-8">
                            <input id="orderId" name="text1" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userId" class="col-4 col-form-label">User id</label>
                        <div class="col-8">
                            <input id="userId" name="text2" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="sessionId" class="col-4 col-form-label">Session Id</label>
                        <div class="col-8">
                            <input id="sessionId" name="text" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="status" class="col-4 col-form-label">Status</label>
                        <div class="col-8">
                            <input id="status" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="subTotal" class="col-4 col-form-label">Sub Total</label>
                        <div class="col-8">
                            <input id="subTotal" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="itemDiscount" class="col-4 col-form-label">Item Discount</label>
                        <div class="col-8">
                            <input id="itemDiscount" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="tax" class="col-4 col-form-label">Tax</label>
                        <div class="col-8">
                            <input id="tax" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="shipping" class="col-4 col-form-label">Shipping cost</label>
                        <div class="col-8">
                            <input id="shipping" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="total" class="col-4 col-form-label">Total</label>
                        <div class="col-8">
                            <input id="total" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="promo" class="col-4 col-form-label">Promotion</label>
                        <div class="col-8">
                            <input id="promo" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="discount" class="col-4 col-form-label">Discount</label>
                        <div class="col-8">
                            <input id="discount" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="grandTotal" class="col-4 col-form-label">Grand Total</label>
                        <div class="col-8">
                            <input id="grandTotal" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="firstName" class="col-4 col-form-label">First Name</label>
                        <div class="col-8">
                            <input id="firstName" name="text3" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastName" class="col-4 col-form-label">Last name</label>
                        <div class="col-8">
                            <input id="lastName" name="text3" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="mobile" class="col-4 col-form-label">Mobile Number</label>
                        <div class="col-8">
                            <input id="mobile" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-4 col-form-label">Address</label>
                        <div class="col-8">
                            <input id="address" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="city" class="col-4 col-form-label">City</label>
                        <div class="col-8">
                            <input id="city" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="createdAt" class="col-4 col-form-label">Date</label>
                        <div class="col-8">
                            <input id="createdAt" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="content" class="col-4 col-form-label">Content</label>
                        <div class="col-8">
                            <input id="content" name="text3" type="text" class="form-control">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

