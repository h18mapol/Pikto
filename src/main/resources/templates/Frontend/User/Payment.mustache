<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>Dashboard - SB Admin</title>
    <link href="/css/User/userstyles.css" rel="stylesheet"/>
    <style>
        .container {
            max-width: 960px;
        }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .border-top-gray {
            border-top-color: #adb5bd;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        .lh-condensed {
            line-height: 1.25;
        }

        .truncateLongTexts {
            width: 100px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis // This is where the magic happens
        }
    </style>
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet"
          crossorigin="anonymous"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js"
            crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand" href="index.html">Start Bootstrap</a>
    <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i>
    </button>
    <!-- Navbar Search-->
    <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search"
                   aria-describedby="basic-addon2"/>
            <div class="input-group-append">
                <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
    <!-- Navbar-->
    <ul class="navbar-nav ml-auto ml-md-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="#">Settings</a>
                <a class="dropdown-item" href="#">Activity Log</a>
                <div class="dropdown-divider"></div>
                <form class="dropdown-item" action="/logout" method="post">
                    <input type="hidden" name="_csrf" value=""/>
                    <button type="submit" class="btn btn-primary">Logout</button>
                </form>
            </div>
        </li>
    </ul>
</nav>
<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
            <div class="sb-sidenav-menu">

                <div class="profile-userpic">
                    <img src="{{userData.pictureUrl}}" class="img-responsive" style="display:block; margin: 0 auto; margin-top: 20px; ">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        {{userData.firstName}} {{userData.lastName}}
                    </div>
                    <div class="profile-userbuttons">
                    </div>
                    <div style="background-color:white; width:100%; height:0.3em; margin-top:50px;">

                    </div>
                    <div class="nav">
                        <a class="nav-link" href="http://localhost:8888/User">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <a class="nav-link" href="http://localhost:8888/User/Checkout">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Cart
                        </a>
                        <a class="nav-link" href="http://localhost:8888/User/Purchases">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Purchased images
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <p data-toggle="modal" data-target="#editModal" style="float:left;"><i class="fas fa-cog" style="margin-right:5px"></i>Settings</p>

                </div>

            </div>
        </nav>
    </div>
    <div id="layoutSidenav_content">

        <main>
            <div class="container-fluid">

                <div class="container" style="padding-top: 5%">

                    <div class="row">
                        <div class="col-md-4 order-md-2 mb-4">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Your cart</span>
                                <span class="badge badge-secondary badge-pill">{{itemCounter}}</span>
                            </h4>
                            <ul class="list-group mb-3 " style="list-style: none">
                                {{#userCart}}
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <small class="text-muted">
                                        <img src="{{productUrl}}" style="object-fit:cover; width:90px; height:60px;">
                                    </small>
                                    <div>
                                        <h6 class="my-0 truncateLongTexts">{{title}}</h6>
                                        <small class="text-muted">Price: {{price}}</small>
                                        <small class="text-muted">Quantity: {{quantity}}</small>
                                    </div>
                                    <div>
                                        <h6 class="my-0 truncateLongTexts">
                                            <a href="http://localhost:8888/User/Payment/Remove/{{cartItemId}}"
                                               type="button"
                                               class="card-link-secondary small text-uppercase mr-3"><i
                                                    class="fas fa-trash-alt mr-1"></i></a>
                                        </h6>
                                    </div>
                                    <div>
                                        <h6 class="my-0 truncateLongTexts"></h6>
                                    </div>
                                </li>
                                {{/userCart}}
                                <!-- Card -->
                                <li style="list-style: none">
                                    <div class="mb-3">
                                        <div class="pt-4">

                                            <h5 class="mb-3">The total amount of</h5>

                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                                    Temporary amount (ex-moms)
                                                    <span>{{orderData.subTotal}}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                                    Moms
                                                    <span>{{orderData.tax}}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                    Shipping
                                                    <span>{{orderData.shipping}}</span>
                                                <li class="list-group-item d-flex justify-content-between align-items-center px-0 text-danger">
                                                    Discount
                                                    <span>{{orderData.itemDiscount}}</span>
                                                </li>
                                                <li id="promotion"
                                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0 text-danger">

                                                </li>
                                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                                    <div>
                                                        <strong>The total amount of</strong>
                                                        <strong>
                                                            <p class="mb-0">(including VAT)</p>
                                                        </strong>
                                                    </div>
                                                    <span><strong id="grandTotal">{{orderData.total}}</strong></span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                                <!-- Card -->
                            </ul>

                            <form class="card p-2">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Promo code" id="promoId"
                                           disabled>
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-primary" onclick="promoValidation() ">
                                            Redeem
                                        </button>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <p id="redeemvalidation"></p>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 order-md-1">
                            <h4 class="mb-3">Order Details</h4>
                            <form class="needs-validation" novalidate>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstName">First name</label>
                                        <input type="text" class="form-control" id="firstName" placeholder=""
                                               value="{{userData.firstName}}" name="firstName"
                                               disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName">Last name</label>
                                        <input type="text" class="form-control" id="lastName" placeholder=""
                                               value="{{userData.lastName}}" name="lastName"
                                               disabled>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">@</span>
                                        </div>
                                        <input type="text" class="form-control" id="username" placeholder="Username"
                                               disabled value="{{userData.userId}}" name="userId">
                                    </div>
                                </div>
                                <hr class="mb-4">
                                <h4 class="mb-3">Payment</h4>
                                <div id="paypal" class="input-group">
                                </div>
                                <hr class="mb-4">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
<script src="/js/Admin/scripts.js"></script>
<script src="https://www.paypal.com/sdk/js?client-id=AVGb1kVA3fCbt3rHo2wUoOIvoK0gJnnAfHPanEoRhI0RHLocUNsX7dGViu2aetmZGzByr0vonqo0IJT1&currency=SEK"
        data-namespace="paypal_sdk"></script>
<script>
    let data2 = $("#grandTotal").text();
    console.log("Data inte data2 --> " + data2.toString());
    paypal_sdk.Buttons({
        createOrder: function (data, actions) {

            return actions.order.create({
                purchase_units: [{
                    amount: {
                        value: data2
                    }
                }]
            });
        },
        onApprove: function (data, actions) {
            return actions.order.capture().then(function (details) {
                console.log(details);

                window.location.replace("/Index/Checkout/Status/" + details.status)
            })
        },
        onCancel: function (data, actions) {
            return actions.order.capture().then(function (details) {
                window.location.replace("/Index/Checkout/Status/" + details.status)
            })
        }
    }).render("#paypal");


</script>
<script>
    var active = false;

    function promoValidation() {
        var value = $("#promoId").val();
        console.log(value);
        if (value === "Rabatt2021" && active === false) {
            active = true;
            var promo = parseInt($("#grandTotal").text());
            var promo2 = promo * 0.1;
            promo = promo * 0.9;
            console.log(promo);
            console.log(promo2);
            $("#grandTotal").text(promo);
            $("#promotion").text("Active Promo: (Rabatt2021)").show().append("<span>" + promo2 + '</span>');

            $("#promoSuccess").text("Promo Discount").show().addClass("text-success");
            return $("#redeemvalidation").text("Valid promo: 10%").addClass("text-success");
        } else {
            if (active) {
                return $("#redeemvalidation").text("Promo already active").addClass("text-danger")
            }
            return $("#redeemvalidation").text("Not a valid promo").addClass("text-danger")
        }
    }
</script>
</body>
</html>
