    <div id="layoutSidenav_content">

        <main>
            <div class="container-fluid">

                <div class="container" style="padding-top: 5%">

                    <div class="row">
                        <div class="col-md-4 order-md-2 mb-4">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Your cart</span>
                                <span class="badge badge-secondary badge-pill">{{itemCounter}}</span>
                            </h4>
                            <ul class="list-group mb-3">
                                {{#userCart}}
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <small class="text-muted">
                                        <img src="{{productUrl}}" style="object-fit:cover; width:90px; height:60px;">
                                    </small>
                                    <div>
                                        <h6 class="my-0">{{title}}</h6>
                                        <small class="text-muted">Quantity: {{quantity}}</small>
                                    </div>
                                    <span class="text-muted">Price: {{price}}</span>
                                </li>
                                {{/userCart}}
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div>
                                        <h6 class="my-0">Total {{total}}</h6>
                                        <small class="text-muted">Total discount {{itemDiscount}}</small>
                                    </div>
                                    <h6 class="my-0">Grand Total:<span class="my-0" id="grandTotal">{{grandTotal}}</span> </h6>

                                </li>
                            </ul>

                            <form class="card p-2">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Promo code" id="promoId">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-primary" onclick="promoValidation()">Redeem</button>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <p id="redeemvalidation"></p>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 order-md-1">
                            <h4 class="mb-3">Order Details</h4>
                            <form class="needs-validation" novalidate>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstName">First name</label>
                                        <input type="text" class="form-control" id="firstName" placeholder="" value="{{userData.firstName}}" name="firstName"
                                               disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName">Last name</label>
                                        <input type="text" class="form-control" id="lastName" placeholder="" value="{{userData.lastName}}" name="lastName"
                                               disabled>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">@</span>
                                        </div>
                                        <input type="text" class="form-control" id="username" placeholder="Username"
                                               disabled value="{{userData.userId}}" name="userId">
                                    </div>
                                </div>
                                <hr class="mb-4">
                                <h4 class="mb-3">Payment</h4>
                                <div id="paypal" class="input-group">
                                </div>
                                <hr class="mb-4">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
<script src="/js/Admin/scripts.js"></script>
<script src="https://www.paypal.com/sdk/js?client-id=AVGb1kVA3fCbt3rHo2wUoOIvoK0gJnnAfHPanEoRhI0RHLocUNsX7dGViu2aetmZGzByr0vonqo0IJT1&currency=SEK" data-namespace="paypal_sdk"></script>
<script>
    let data2 = $("#grandTotal").text();
    console.log("Data inte data2 --> " + data2.toString());
    paypal_sdk.Buttons({
        createOrder:function (data, actions) {

            return actions.order.create({
                purchase_units:[{
                    amount:{
                        value: data2
                    }
                }]
            });
        },
        onApprove:function (data,actions) {
            return actions.order.capture().then(function (details) {
                console.log(details);

                window.location.replace("/User/Checkout/Status/" + details.status)
            })
        },
        onCancel:function (data,actions) {
            return actions.order.capture().then(function (details) {
                window.location.replace("/User/Checkout/Status/" + details.status)
            })
        }
    }).render("#paypal");


</script>
<script>
    function promoValidation(){
        var value = $("#promoId").val();
        console.log(value);
        if (value == "Rabatt2021") {
            return $( "#redeemvalidation" ).text( "Valid promo: 10%" ).addClass("text-success")
        }else {
            return $( "#redeemvalidation" ).text( "Not a valid promo" ).addClass("text-danger")
        }
    }
</script>
</body>
</html>
